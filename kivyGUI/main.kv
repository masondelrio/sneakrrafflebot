<ItemDrawer>:
    theme_text_color: "Custom"


    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color


<ContentNavigationDrawer>:

    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    ScrollView:

        DrawerList:
            id: md_list
            OneLineAvatarListItem:
                text: "Home"
                on_press:

                    root.screen_manager.current = "screen1"
                ImageLeftWidget:
                    source: "home [#1391].png"
            OneLineAvatarListItem:
                text: "Profile"
                on_release:

                    root.screen_manager.current = "screen3"
                ImageLeftWidget:
                    source: "profile [#1341].png"
            OneLineAvatarListItem:
                text: "Emails"
                on_release:

                    root.screen_manager.current = "screen2"
                ImageLeftWidget:
                    source: "email [#1573].png"
            OneLineAvatarListItem:
                text: "Proxies"
                on_press:


                ImageLeftWidget:
                    source: "wifi [#1021].png"
            OneLineAvatarListItem:
                text: "Raffles Won"
                on_press:


                ImageLeftWidget:
                    source: "emoji_happy_simple [#460].png"







NavigationLayout:


    ScreenManager:
        id:screen_manager

        Screen:
            name:"screen1"

            BoxLayout:
                orientation: 'vertical'

                MDToolbar:
                    title: "Live Raffles"
                    elevation: 10
                    left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]

                Button:
                    on_press: app.play_sound()

                    size_hint: 1, 1
                    Image:
                        source: 'PinClipart.com_saturn-clipart_5249382.png'

                        x: self.parent.width * .5 - self.width * .5
                        y: self.parent.height* .5 - self.height * .5
                        size: 500, 500
                        allow_stretch: True









        Screen:
            name:"screen2"

            BoxLayout:
                orientation: 'vertical'

                MDToolbar:
                    title: "Emails"
                    elevation: 10
                    left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                GridLayout:
                    cols:1
                    GridLayout:
                        cols:2
                        MDLabel:
                            text:"Add email "
                            font_style: "Button"
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            size_hint_y: None
                            height: self.texture_size[1]

                        TextInput:
                            id: email
                            multiline:True
                Button:
                    text: "Submit"
                    on_release: content_drawer.btn()
        Screen:
            name:"screen3"

            BoxLayout:
                orientation: 'vertical'

                MDToolbar:
                    title: "Profile"
                    elevation: 10
                    left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                GridLayout:
                    cols:1

                    Button:
                        text: "Submit"
                        on_release: content_drawer.btn()







    MDNavigationDrawer:
        drawer_logo: "image.png"
        id: nav_drawer


        ContentNavigationDrawer:
            screen_manager:screen_manager
            email:email
            id: content_drawer